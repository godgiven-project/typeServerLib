{
    "version": "0.12.1",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "package": [
      "api",
      "package/*"
    ],
    "command": {
      "version": {
        "conventionalCommits": true,
        "changelogPreset": "angular",
        "message": "chore(release): %s"
      },
      "publish": {
        "conventionalCommits": true,
        "ignoreChanges": [
          "*.md"
        ]
      },
      "bootstrap": {
        "hoist": true,
        "npmClientArgs": [
          "--no-package-lock"
        ]
      },
      "run": {
        "stream": true
      }
    }
  }